<% include partials/header %>
  <div class="ui two column centered grid">
    <div class="computer only column">
      <div class="ui main container">
        <div class="ui container segment raised">
          <h1>Edit <%= blog.title %></h1>
          <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="post">
            <div class="field">
              <label>Title: </label>
              <input type="text" name="blog[title]" value="<%= blog.title %>">
            </div>
            <div class="field">
              <label>Image: </label>
              <input type="text" name="blog[image]" value="<%= blog.image %>">
            </div>
            <div class="field">
              <label>Content: </label>
              <textarea name="blog[body]" rows="8" cols="80"><%= blog.body %></textarea>
            </div>
              <button class="ui button basic violet big" type="submit" name="editButton">Edit Post</button>
            <p><a href="/blogs/<%= blog._id %>">Cancel</a></p>
          </form>
        </div>
      </div>
    </div>
  </div>
